---
import ColorCard from './ColorCard.astro';

interface Props {
  colors?: string[];
  lockedStates?: boolean[];
}

const { 
  colors = ['#FF6B6B', '#4ECDC4', '#45B7D1', '#FFA07A', '#98D8C8'],
  lockedStates = [false, false, false, false, false]
} = Astro.props;
---

<div id="palette-grid" class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 mb-8">
  {colors.map((color, index) => (
    <ColorCard 
      color={color} 
      locked={lockedStates[index]} 
      index={index}
    />
  ))}
</div>

<!-- Botones de acciÃ³n principales -->
<div class="flex flex-wrap gap-4 justify-center mb-12">
  <button
    id="generate-random-btn"
    class="btn-primary flex items-center gap-2"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
    </svg>
    Generar Aleatoria
  </button>

  <button
    id="evaluate-btn"
    class="btn-secondary flex items-center gap-2"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    Evaluar Paleta
  </button>

  <button
    id="improve-btn"
    class="btn-secondary flex items-center gap-2"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
    </svg>
    Arreglar con IA
  </button>

  <button
    id="export-btn"
    class="btn-secondary flex items-center gap-2"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
    </svg>
    Exportar
  </button>
</div>
