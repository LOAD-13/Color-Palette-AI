---
import { Sparkles, Palette } from '@lucide/astro';
---

<section class="relative overflow-hidden py-20 lg:py-32 bg-gradient-to-b from-gray-50 to-white">
  <!-- Decorative background elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 -right-40 w-96 h-96 bg-gray-100 rounded-full blur-3xl opacity-40"></div>
    <div class="absolute -bottom-32 -left-40 w-96 h-96 bg-gray-100 rounded-full blur-3xl opacity-40"></div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <!-- Layout asimétrico con grid -->
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Columna izquierda - Contenido principal -->
      <div class="text-left space-y-6">
        <div class="inline-flex items-center gap-2 mb-4 px-4 py-2 bg-white/80 backdrop-blur-sm rounded-full shadow-sm border border-gray-200 fade-in-up stagger-1">
          <Sparkles class="w-4 h-4 text-gray-700" />
          <span class="text-gray-700 font-medium text-sm">Powered by AI</span>
        </div>
        
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-black leading-tight fade-in-up stagger-2">
          <span class="gradient-text">Color Palette</span>
          <br />
          <span class="text-gray-900">AI</span>
        </h1>
        
        <p class="text-lg md:text-xl text-gray-600 leading-relaxed max-w-lg fade-in-up stagger-3">
          Genera paletas de colores perfectas con inteligencia artificial.
          <br />
          <span class="text-gray-500">Evalúa, mejora y exporta en segundos.</span>
        </p>
        
        <div class="flex gap-4 flex-wrap pt-4 fade-in-up stagger-4">
          <a href="/app" class="btn-primary text-lg inline-flex items-center gap-2 group">
            <Palette class="w-5 h-5 group-hover:rotate-12 transition-transform" />
            Comenzar Gratis
          </a>
          
        </div>

        <!-- Stats decorativas -->
        <div class="grid grid-cols-3 gap-6 pt-8 fade-in-up stagger-5">
          <div>
            <div class="text-3xl font-bold text-gray-900">500+</div>
            <div class="text-sm text-gray-600">Paletas Creadas</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-gray-900">98%</div>
            <div class="text-sm text-gray-600">Precisión IA</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-gray-900">5s</div>
            <div class="text-sm text-gray-600">Tiempo Promedio</div>
          </div>
        </div>
      </div>

      <!-- Columna derecha - Preview visual -->
      <div class="relative fade-in-up stagger-3">
        <!-- Paleta de ejemplo flotante -->
        <div class="relative">
          <!-- Card principal -->
          <div class="glass-effect p-8 rounded-3xl rotate-2 hover:rotate-0 transition-transform duration-500">
            <div class="space-y-4">
              <div class="flex items-center justify-between mb-6">
                <span class="text-sm font-semibold text-gray-700">Paleta Demo</span>
                <span class="px-3 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">
                  
                </span>
              </div>
              
              <div class="grid grid-cols-5 gap-3">
                <div class="aspect-square rounded-xl bg-gradient-to-br from-slate-900 to-slate-700 shadow-lg"></div>
                <div class="aspect-square rounded-xl bg-gradient-to-br from-blue-600 to-blue-400 shadow-lg"></div>
                <div class="aspect-square rounded-xl bg-gradient-to-br from-emerald-500 to-emerald-300 shadow-lg"></div>
                <div class="aspect-square rounded-xl bg-gradient-to-br from-amber-500 to-amber-300 shadow-lg"></div>
                <div class="aspect-square rounded-xl bg-gradient-to-br from-rose-500 to-rose-300 shadow-lg"></div>
              </div>

              <div class="pt-4 flex gap-2">
                <div class="flex-1 h-2 bg-gray-200 rounded-full overflow-hidden">
                  <div class="h-full bg-gray-900 rounded-full" style="width: 96%"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Cards flotantes secundarias -->
          <div class="absolute -top-6 -right-6 w-24 h-24 bg-white rounded-2xl shadow-xl p-4 rotate-12 hover:rotate-6 transition-transform duration-500 hidden lg:block">
            <div class="w-full h-full bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg"></div>
          </div>
