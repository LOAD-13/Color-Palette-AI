---
import { Sparkles, Image, Gauge, Download, Lock, Palette } from '@lucide/astro';

const features = [
  {
    icon: Sparkles,
    title: 'Generación con IA',
    description: 'Describe un mood y obtén paletas perfectas al instante con Gemini.'
  },
  {
    icon: Image,
    title: 'Desde Imágenes',
    description: 'Sube una foto y extrae automáticamente sus colores dominantes.'
  },
  {
    icon: Gauge,
    title: 'Evaluación Inteligente',
    description: 'Califica tu paleta: contraste, armonía, accesibilidad y balance.'
  },
  {
    icon: Lock,
    title: 'Bloqueo Selectivo',
    description: 'Bloquea colores que te gusten y regenera solo los demás.'
  },
  {
    icon: Palette,
    title: 'Arreglo Automático',
    description: 'Mejora tu paleta sin cambiarla por completo, ajustes sutiles.'
  },
  {
    icon: Download,
    title: 'Exporta Todo',
    description: 'HEX, RGB, HSL, JSON, CSS variables, formato Tailwind y más.'
  }
];
---

<section class="py-24 px-6">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16 fade-in-up">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Todo lo que necesitas
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Herramientas profesionales para diseñadores, desarrolladores y creativos.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature, index) => (
        <div class={`card-minimal fade-in-up stagger-${index + 1}`}>
          <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center mb-4">
            <feature.icon class="w-6 h-6 text-gray-900" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">{feature.title}</h3>
          <p class="text-gray-600">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
